{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Metadata configuration json schema",
    "type": "object",
    "properties": {
      "meta": {
        "type": "object",
        "properties": {
          "version": {
            "type": "number",
            "minLength": 1
          },
          "codename": {
            "type": "string",
            "minLength": 1
          },
          "mode": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "version",
          "codename",
          "mode"
        ]
      }
    },
    "required": [
      "meta"
    ]
  }