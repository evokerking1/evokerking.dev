{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Skyport Metadata configuration json schema",
    "type": "object",
    "properties": {
      "meta": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "minLength": 3,
            "description": "Version Number the current skyport release"
          },
          "codename": {
            "type": "string",
            "minLength": 1,
            "description": "Codename for the current skyport release"
          },
          "mode": {
            "type": "string",
            "minLength": 1,
            "description": "What mode the server runs in. Not currently used."
          }
        },
        "required": [
          "version",
          "codename"
        ]
      }
    },
    "required": [
      "meta"
    ]
  }
